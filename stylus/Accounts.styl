.login-modal 
    position: fixed
    border: solid 4px deep-blue
    top: 20%
    left: 50%
    padding: 20px
    width: 50%
    transform: translateX(-50%) scale(1)
    background: #FFF
    opacity: 1
    card(4)
    h3 
        margin-top: 0
    .close-login 
        position: absolute
        top: 0
        right: 0
        display: block
        cursor: pointer
        font-size: 2em
        padding: 10px 15px
        opacity: 1
        color: deep-grey
        trans()
        &:hover
            color: red    
    
.at-input 
    margin-bottom: 10px
    
.accounts-dialog
    position: fixed
    border: solid 4px deep-blue
    transform: translate3D(-50%, 15%, 0) scale(1)
    background: #FFF
    card(4)

.login-link-text a
    text-decoration: none

.modalLoad-enter
    animation: slideIn 0.3s linear

.modalLoad-leave 
    animation: slideOut 0.2s linear

@keyframes slideIn
    0%
        opacity 0
        transform: translate3d(100%, -80%, 0) scale(0.5)
    100%
        opacity 1
        transform: translateX(-50%) scale(1);

@keyframes slideOut
    0%
        opacity 1
        transform: translateX(-50%) scale(1);
    100%
        opacity 0
        transform: translate3d(100%, -80%, 0) scale(0.5)
